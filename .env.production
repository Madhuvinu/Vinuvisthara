# Sarii Project - Production Environment Configuration
# Use this as reference for setting environment variables in your production environment
# DO NOT commit this file with actual secrets - use your deployment platform's secret management

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Backend API Configuration
API_URL=https://your-api-domain.com/api
NEXT_PUBLIC_API_URL=https://your-api-domain.com/api

# Database Configuration (Production - Use managed database service)
DB_CONNECTION=mysql
DB_HOST=your-database-host.example.com
DB_PORT=3306
DB_DATABASE=sarii_production
DB_USERNAME=sarii_user
DB_PASSWORD=your-secure-password-here

# Redis Configuration (Production)
REDIS_HOST=your-redis-host.example.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Mail Configuration (Production - Use SendGrid, AWS SES, etc.)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME=Sarii

# Cache & Session (Production)
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Storage
FILESYSTEM_DRIVER=s3
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-s3-bucket-name
AWS_USE_PATH_STYLE_ENDPOINT=false

# Broadcast
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_SECRET=your-pusher-app-secret
PUSHER_APP_CLUSTER=mt1

# Frontend Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-api-domain.com/api

# Security Headers (Optional)
APP_CIPHER=AES-256-CBC
