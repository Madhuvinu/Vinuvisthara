# Sarii Project - Production Environment Configuration (server)
# On server: copy this to .env and set real values. Never use localhost here.
# Docker Compose reads .env for ${VAR}; these values are passed into containers and frontend build.

# Application Environment (must be production on server)
APP_ENV=production
APP_DEBUG=false
APP_URL=https://api.vinuvisthara.com

# Backend API + Frontend (baked into Next.js at build time; no localhost)
API_URL=https://api.vinuvisthara.com
NEXT_PUBLIC_API_URL=https://api.vinuvisthara.com

# Database Configuration (Production - Use managed database service)
DB_CONNECTION=mysql
DB_HOST=your-database-host.example.com
DB_PORT=3306
DB_DATABASE=sarii_production
DB_USERNAME=sarii_user
DB_PASSWORD=your-secure-password-here

# Redis Configuration (Production)
REDIS_HOST=your-redis-host.example.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Mail Configuration (Production - Use SendGrid, AWS SES, etc.)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME=Sarii

# Cache & Session (Production)
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Storage
FILESYSTEM_DRIVER=s3
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-s3-bucket-name
AWS_USE_PATH_STYLE_ENDPOINT=false

# Broadcast
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_SECRET=your-pusher-app-secret
PUSHER_APP_CLUSTER=mt1

# Frontend Configuration
NEXT_PUBLIC_SITE_URL=https://app.vinuvisthara.com
NEXT_PUBLIC_MEDUSA_ADMIN_URL=https://admin.vinuvisthara.com

# Security Headers (Optional)
APP_CIPHER=AES-256-CBC
