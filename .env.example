# Sarii – root .env (used by docker-compose for ${VAR} substitution)
# Local:    copy .env.local to .env (or symlink)
# Production: copy .env.production to .env and set real values (no localhost on server)

APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Frontend build + runtime: set in production so built app and CORS use production URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MEDUSA_ADMIN_URL=http://localhost:9001/app
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Backend (Laravel) – also set in backend-laravel/.env for Laravel
API_URL=http://localhost:8000
DB_DATABASE=sarii
DB_USERNAME=root
DB_PASSWORD=secret

# Production only (optional): comma-separated CORS origins; used when APP_ENV=production
# CORS_ALLOWED_ORIGINS=https://app.vinuvisthara.com,https://vinuvisthara.com
